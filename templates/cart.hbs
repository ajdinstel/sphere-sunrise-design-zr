<!DOCTYPE html>
<html lang="en">

<head>
  {{> common/htmlhead}}
</head>

<body>
  <div class="darkbg hidden"></div>
  {{> common/header}}
  <div class="cart-page">
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-xs-12">
          <div class="current-in-bag">
            <span>
              <img class="bag-icon-lg" src="{{meta.assetsPath}}img/hand-bag-2-black.png" alt="bag icon">
            </span>
            <span class="text-uppercase your-bag-txt">{{i18n "checkout:yourBag"}}: </span>
            <span class="items-total-txt">{{i18n "checkout:itemsTotal" count=content.cart.itemsTotal}}</span>
          </div>
        </div>
        {{> checkout/start-checkout-link mobile=false bottom=false id="cart-checkoutnow-btn"}}
      </div>
      <div class="row">
        <div class="col-sm-12">
          {{> checkout/order-summary cart=content.cart mainClass="cart-content" editable=true}}
        </div>
      </div>
      <div class="row bottom-cart-btns">
        {{> checkout/start-checkout-link mobile=true bottom=true}}
        {{> checkout/continue-shopping-button-left}}
        {{> checkout/start-checkout-link mobile=false bottom=true}}
      </div>
    </div>
  </div>
  {{> catalog/wishlist wishlist=content.wishlist}}
  {{> common/footer}}
  {{> common/htmlscripts}}
</body>

</html>

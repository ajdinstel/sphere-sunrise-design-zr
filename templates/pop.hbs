<!DOCTYPE html>
<html lang="en">

<head>
  {{> common/htmlhead}}
</head>

<body>
  <div class="darkbg hidden"></div>
  {{> common/header}}
  <div class="pop-page">
    <div id="pop-page" class="container">
      <div class="pop-alert-overlay hidden">
        <div class="pop-alert-wrapper">
          <div class="pop-alert-box">
            <div class="pop-alert-text">
              {{i18n "content.messages.pleaseWait"}}
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 figure-col">
          {{> catalog/banner banner=content.banner}}
        </div>
      </div>
      <!--form id="form-filter-products" name="filter-products" action="{{content.filterProductsUrl}}"-->
        <div class="row row-offcanvas row-offcanvas-left">
          <div class="col-xs-12">
            {{> catalog/breadcrumb breadcrumb=content.breadcrumb}}
          </div>
          <div class="product-filter hidden-xs">
            {{> catalog/filters-sidebar}}
          </div>
          <div class="col-sm-9">
            <div class="dark-overlay"></div>
            <div class="row jumbotron-row">
              <div class="col-xs-12">
                {{> catalog/jumbotron jumbotron=content.jumbotron}}
              </div>
            </div>

            <!-- Mobile version -->
            <div class="row visible-xs">
              <div class="col-xs-12">
                <ul class="mobile-filter-list clearfix">
                  <li class="pull-left">
                    <button type="button" class="offcanvas-btn offcanvas-open" data-toggle="modal" data-target="#sidebar-overlay">
                      {{i18n "content.filters.open"}}
                    </button>
                  </li>
                  <li class="pull-left">
                    {{> catalog/results-summary pagination=content.pagination}}
                  </li>
                </ul>
              </div>
              {{> catalog/filters-sidebar-mobile}}
            </div>
            <!-- End mobile version -->

            <hr class="hr hidden-xs">
            <div class="row hidden-xs item-list-pagination">
              <div class="col-xs-4 text-left">
                <div class="styled-select icon-drop-down">
                  {{> catalog/sort-selector sortSelector=content.sortSelector}}
                </div>
                {{> catalog/results-summary pagination=content.pagination}}
              </div>
              <div class="col-xs-4 text-center pagination">
                <ul class="page-numbers">
                  {{> catalog/pagination pagination=content.pagination}}
                </ul>
              </div>
              <div class="col-xs-4 text-right">
                {{> catalog/display-selector displaySelector=content.displaySelector}}
              </div>
            </div>
            <div id="pop-product-list" class="row">
              {{> catalog/product-list products=content.products}}
            </div>
            <div class="row">
              <div class="col-xs-12 text-center pagination">
                <ul class="page-numbers page-numbers-bottom">
                  {{> catalog/pagination pagination=content.pagination}}
                </ul>
              </div>
            </div>
            <hr class="hr">
            <div class="row">
              <div class="col-sm-12">
                {{> catalog/seo seo=content.seo}}
              </div>
            </div>
          </div>
        </div>
      <!--/form-->
    </div>
  </div>
  {{> catalog/wishlist wishlist=content.wishlist}}

  {{> common/footer}}
  {{> common/htmlscripts}}
</body>
</html>
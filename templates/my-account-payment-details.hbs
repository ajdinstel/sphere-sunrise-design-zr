<!DOCTYPE html>
<html lang="en">

<head>
  {{> common/htmlhead}}
</head>

<body>
  <div class="darkbg hidden"></div>
  {{> common/header}}
  <div class="payment-details">
    <div class="container">
      <div class="my-account-title">
        <span class="my-account-title-text icon-user">{{content.pageTitle}}</span>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <div class="payment-details-wrapper">
            <div class="row">
              <div class="col-sm-3">
                <div class="my-account-sidebar">
                  <div class="my-account-sidebar-items">
                    <a href="{{content.sidebarItemOne.url}}">{{content.sidebarItemOne.text}}</a>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="{{content.sidebarItemTwo.url}}">{{content.sidebarItemTwo.text}}</a>
                  </div>
                  <div class="my-account-sidebar-items active">
                    <a href="{{content.sidebarItemThree.url}}">{{content.sidebarItemThree.text}}</a>
                  </div>
                  <div class="payment-details-content visible-xs">
                    <div class="row hidden-xs">
                      <div class="col-sm-12">
                        <div class="address-book-title">
                          {{content.contentTitle}}
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-sm-6">
                        <div class="payment-details-box-titles">
                          {{content.defaultPaymentMethodTitle}}
                        </div>
                        <div class="payment-details-dark-box">
                          <div class="payment-details-dark-box-title">{{content.defaultPaymentMethod.title}}</div>
                          <div>{{content.defaultPaymentMethod.name}}</div>
                          <div>{{content.defaultPaymentMethod.type}}</div>
                          <div>{{content.defaultPaymentMethod.number}}</div>
                          <div>{{content.defaultPaymentMethod.date}}</div>
                          <div class="payment-details-box-edit-btn">
                            <button><img src="{{meta.assetsPath}}/img/edit-1.png" alt="edit icon">{{content.defaultPaymentMethod.edit}}</button>
                          </div>
                        </div>
                        <div class="add-new-payment-btn">
                          <button>{{content.addNewPaymentMethodBtn}}</button>
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="payment-details-box-titles">
                          {{content.additionalPaymentMethodsTitle}}
                        </div>
                        <div class="payment-details-white-box">
                          <div class="payment-details-white-box-title">{{content.additionalPaymentMethodOne.title}}</div>
                          <div>{{content.additionalPaymentMethodOne.name}}</div>
                          <div>{{content.additionalPaymentMethodOne.type}}</div>
                          <div>{{content.additionalPaymentMethodOne.number}}</div>
                          <div>{{content.additionalPaymentMethodOne.date}}</div>
                          <div class="payment-details-edit-delete">
                            <div><button><img src="{{meta.assetsPath}}/img/edit-1.png" alt="">{{content.additionalPaymentMethodOne.edit}}</button></div>
                            <div><button><img src="{{meta.assetsPath}}/img/delete-60px.png" alt="">{{content.additionalPaymentMethodOne.delete}}</button></div>
                          </div>
                        </div>
                        <div class="payment-details-white-box">
                          <div class="payment-details-white-box-title">{{content.additionalPaymentMethodTwo.title}}</div>
                          <div>{{content.additionalPaymentMethodTwo.name}}</div>
                          <div>{{content.additionalPaymentMethodTwo.type}}</div>
                          <div>{{content.additionalPaymentMethodTwo.number}}</div>
                          <div>{{content.additionalPaymentMethodTwo.date}}</div>
                          <div class="payment-details-edit-delete">
                            <div><button><img src="{{meta.assetsPath}}/img/edit-1.png" alt="">{{content.additionalPaymentMethodTwo.edit}}</button></div>
                            <div><button><img src="{{meta.assetsPath}}/img/delete-60px.png" alt="">{{content.additionalPaymentMethodTwo.delete}}</button></div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="{{content.sidebarItemFour.url}}">{{content.sidebarItemFour.text}}</a>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="{{content.sidebarItemFive.url}}">{{content.sidebarItemFive.text}}</a>
                  </div>
                  <div class="my-account-sidebar-items clearfix">
                    <a href="{{content.sidebarItemSix.url}}">
                      <span><img class="sidebar-wishlist-heart hidden-sm" src="{{meta.assetsPath}}/img/heart-1.png" alt="heart icon"></span>{{content.sidebarItemSix.text}}<span class="sidebar-wishlist-quantity hidden-sm">{{content.sidebarItemSix.wishlistItems}}</span>
                    </a>
                  </div>
                  <div class="my-account-sidebar-items">
                    <a href="{{content.sidebarItemSeven.url}}">{{content.sidebarItemSeven.text}}</a>
                  </div>
                </div>
              </div>
              <div class="col-sm-9">
                <div class="payment-details-content hidden-xs">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="address-book-title">
                        {{content.contentTitle}}
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="payment-details-box-titles">
                        {{content.defaultPaymentMethodTitle}}
                      </div>
                      <div class="payment-details-dark-box">
                        <div class="payment-details-dark-box-title">{{content.defaultPaymentMethod.title}}</div>
                        <div>{{content.defaultPaymentMethod.name}}</div>
                        <div>{{content.defaultPaymentMethod.type}}</div>
                        <div>{{content.defaultPaymentMethod.number}}</div>
                        <div>{{content.defaultPaymentMethod.date}}</div>
                        <div class="payment-details-box-edit-btn">
                          <button><img src="{{meta.assetsPath}}/img/edit-1.png" alt="edit icon">{{content.defaultPaymentMethod.edit}}</button>
                        </div>
                      </div>
                      <div class="add-new-payment-btn">
                        <button>{{content.addNewPaymentMethodBtn}}</button>
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="payment-details-box-titles">
                        {{content.additionalPaymentMethodsTitle}}
                      </div>
                      <div class="payment-details-white-box">
                        <div class="payment-details-white-box-title">{{content.additionalPaymentMethodOne.title}}</div>
                        <div>{{content.additionalPaymentMethodOne.name}}</div>
                        <div>{{content.additionalPaymentMethodOne.type}}</div>
                        <div>{{content.additionalPaymentMethodOne.number}}</div>
                        <div>{{content.additionalPaymentMethodOne.date}}</div>
                        <div class="payment-details-edit-delete">
                          <div><button><img src="{{meta.assetsPath}}/img/edit-1.png" alt="">{{content.additionalPaymentMethodOne.edit}}</button></div>
                          <div><button><img src="{{meta.assetsPath}}/img/delete-60px.png" alt="">{{content.additionalPaymentMethodOne.delete}}</button></div>
                        </div>
                      </div>
                      <div class="payment-details-white-box">
                        <div class="payment-details-white-box-title">{{content.additionalPaymentMethodTwo.title}}</div>
                        <div>{{content.additionalPaymentMethodTwo.name}}</div>
                        <div>{{content.additionalPaymentMethodTwo.type}}</div>
                        <div>{{content.additionalPaymentMethodTwo.number}}</div>
                        <div>{{content.additionalPaymentMethodTwo.date}}</div>
                        <div class="payment-details-edit-delete">
                          <div><button><img src="{{meta.assetsPath}}/img/edit-1.png" alt="">{{content.additionalPaymentMethodTwo.edit}}</button></div>
                          <div><button><img src="{{meta.assetsPath}}/img/delete-60px.png" alt="">{{content.additionalPaymentMethodTwo.delete}}</button></div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  {{!-- {{> catalog/wishlist}} --}}
  {{> common/footer}}
  {{> common/htmlscripts}}
</body>

</html>

<a href="{{url}}">
  <div class="shop-item">
    {{#if priceOld}}
      <div class="sale-flag">{{i18n "content.static.saleText"}}</div>
    {{/if}}
    {{#if new}}
      <div class="new-flag">{{i18n "content.static.newText"}}</div>
    {{/if}}
    <button type="button" class="heart-xs visible-xs">
      <span class="sr-only">{{i18n "content.static.wishlistText"}}</span>
    </button>
    <img class="pop-product-image" src="{{images.0.bigImage}}" alt="{{text}}" width="200" />
    <div class="pop-product-name">
      <span class="name-headline">{{text}}</span>
      <span class="name-subline">{{description}}</span>
    </div>
    <div class="pop-item-price">
      {{#if priceOld}}
        <span class="strikethrough">{{priceOld}}</span>
        <span class="pop-item-price-old">{{price}}</span>
      {{else}}
        <span>{{price}}</span>
      {{/if}}
    </div>
    <div class="pop-product-more-colors">
      {{#if moreColors}}{{i18n "content.static.moreColorsText"}}{{/if}}&nbsp;
    </div>
    <div class="shop-item-overlay hidden-xs">
      <button type="button" class="quickview" data-modal="quickview-modal-{{id}}">{{i18n "content.static.quickViewText"}}</button>
      <button type="button" class="heart">
        <span class="sr-only">{{i18n "content.static.wishlistText"}}</span>
      </button>
    </div>
  </div>
</a>
{{> catalog/quickview}}

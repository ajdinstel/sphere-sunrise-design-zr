<!-- Modal -->
<div class="modal fade" id="quickview-modal-{{id}}" tabindex="-1" role="dialog" aria-labelledby="quickviewModal">
  <div class="modal-dialog modal-dialog-quickview" role="document">
    <div class="modal-content quickview-modal">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="quickviewModal">
          <span aria-hidden="true">
            <img src="{{context.meta.assetsPath}}img/close.png" alt="{{i18n "content.general.closeModal"}}" />
          </span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row product-info-row-pdp">
          <div class="col-sm-4">
            <div class="bzoom_wrap">
              <ul id="bzoom" data-count="{{gallery.list.length}}">
                {{#each gallery.list}}
                <li>
                  <img class="bzoom_thumb_image" src="{{thumbImage}}"/>
                  <img class="bzoom_big_image" src="{{bigImage}}"/>
                </li>
                {{/each}}
              </ul>
            </div>
          </div>
          <div class="col-sm-6 col-sm-offset-2 product-description">
            <div class="row">
              <div class="col-sm-12">
                <p><h1 class="text-uppercase pdp-product-title">{{name}}</h1><span class="grey-p quickview-sku">{{sku}}</span></p>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <fieldset class="rating">
                  <input type="radio" id="rating-{{id}}-star5" name="rating" value="5" {{#if rating5}}checked{{/if}}/>
                  <label for="rating-{{id}}-star5" title="{{i18n "content.ratings.description5"}}">{{i18n "content.ratings.text5"}}</label>
                  <input type="radio" id="rating-{{id}}-star4" name="rating" value="4" {{#if rating4}}checked{{/if}} />
                  <label for="rating-{{id}}-star4" title="{{i18n "content.ratings.description4"}}">{{i18n "content.ratings.text4"}}</label>
                  <input type="radio" id="rating-{{id}}-star3" name="rating" value="3" {{#if rating3}}checked{{/if}} />
                  <label for="rating-{{id}}-star3" title="{{i18n "content.ratings.description3"}}">{{i18n "content.ratings.text3"}}</label>
                  <input type="radio" id="rating-{{id}}-star2" name="rating" value="2" {{#if rating2}}checked{{/if}} />
                  <label for="rating-{{id}}-star2" title="{{i18n "content.ratings.description2"}}">{{i18n "content.ratings.text2"}}</label>
                  <input type="radio" id="rating-{{id}}-star1" name="rating" value="1" {{#if rating1}}checked{{/if}} />
                  <label for="rating-{{id}}-star1" title="{{i18n "content.ratings.description1"}}">{{i18n "content.ratings.text1"}}</label>
                </fieldset>
                <span class="star-rating-review"><a href="{{addReviewUrl}}">{{i18n "content.product.writeReview"}}</a></span>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <a href="#"><span class="view-details">{{i18n "content.product.viewDetails"}}</span></a>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12">
                <p class="product-price">{{price}}</p>
              </div>
            </div>
            <form id="add-to-cart-quickview-{{id}}" name="add-to-cart-quickview" action="{{addToCartUrl}}">
              <div class="row select-row">
                <ul class="list-inline">
                  {{#each attributes}}
                  <li>
                    <p class="text-uppercase">{{name}}</p>
                    <div>
                      <select name="{{key}}" class="select-product-detail">
                        <option>{{i18n "content.product.choose"}} {{name}}</option>
                        {{#each list}}
                        <option value="{{value}}" {{#if selected}}selected{{/if}}>{{text}}</option>
                        {{/each}}
                      </select>
                    </div>
                    {{> common/required-error-message}}
                  </li>
                  {{/each}}
                </ul>
              </div>
              <div class="row">
                <ul class="list-inline">
                  <li>
                    <select name="quantity" class="bag-items">
                      {{#each context.meta.bagItems}}
                      <option value="{{this}}">{{this}}</option>
                      {{/each}}
                    </select>
                  </li>
                  <li>
                    <button type="submit" class="add-to-bag text-center">
                      <img class="bag-thumb" src="{{context.meta.assetsPath}}img/hand-bag-2-black.png" alt="{{i18n "content.product.addToBag"}}">{{i18n "content.product.addToBag"}}
                    </button>
                  </li>
                </ul>
              </div>
            </form>
            <div class="row">
              <ul class="list-inline">
                <li>
                  <form id="form-add-to-wishlist-quickview-{{id}}" name="add-to-wishlist-quickview" action="{{addToWishlistUrl}}">
                    <button type="submit" class="btn pdp-product-heart">
                      <span class="sr-only">{{i18n "content.product.addToWishlist"}}</span>
                    </button>
                  </form>
                </li>
                <li>
                  <div class="availability">
                    <span class="glyphicon glyphicon-ok-sign"></span>{{i18n "content.product.available"}}
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<form id="form-add-to-cart{{index}}" name="add-to-cart" action="{{product.addToCartUrl}}">
  <div class="row select-row">
    <ul class="list-inline">
      {{#each product.data.attributes}}
        {{> catalog/product-attribute attribute=this meta=../meta}}
      {{/each}}
      <li class="size-guide-li">
        {{> catalog/size-guide}}
      </li>    
    </ul>
  </div>
  <div class="row">
    <ul class="product-actions-list list-inline">
      <li class="bag-items-li">
        <select name="quantity" class="bag-items">
          {{#each meta.bagItems}}
          <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      </li>
      <li>
        <button type="submit" class="add-to-bag text-center">
          <img class="bag-thumb" src="{{meta.assetsPath}}img/hand-bag-2-black.png" alt="{{i18n "content.product.addToBag"}}">
          {{i18n "content.product.addToBag"}}
        </button>
      </li>
    </ul>
  </div>
</form>